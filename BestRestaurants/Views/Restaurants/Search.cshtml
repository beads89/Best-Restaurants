@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>hello</h1>
@if (@Model.Count == 0)
{
  <h3>No restaurants!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</li>
}

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>