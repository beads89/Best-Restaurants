@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;


<h1>All Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.CuisineName</li>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>

<h3>Search by Cuisine type: </h3>
@using (Html.BeginForm("Search", "Restaurants"))
{
  @Html.DropDownList("CuisineId")
  <input type="submit" value="search"/>
}