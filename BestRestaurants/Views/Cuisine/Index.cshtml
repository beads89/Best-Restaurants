@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.CuisineName}", "Details", new { id = cuisine.CuisineId }) | @cuisine.CuisineId</li>
  }
</ul>

<p>@Html.ActionLink("Add a new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>